#!/bin/sh
LD_LIBRARY_PATH=/usr/local/lib
export LD_LIBRARY_PATH
cd /home/pi/Panstamp/WiControl
DAYOFWEEK=$(date +"%u")
if [ "${DAYOFWEEK}" -eq 1 ]
then    
  wget --timeout=15 http://adrianbowyer.com/workshop-profile-monday.dat -O profile.dat
elif [ "${DAYOFWEEK}" -eq 2 ]
then    
  wget --timeout=15 http://adrianbowyer.com/workshop-profile-tuesday.dat -O profile.dat
elif [ "${DAYOFWEEK}" -eq 3 ]
then    
  wget --timeout=15 http://adrianbowyer.com/workshop-profile-wednesday.dat -O profile.dat
elif [ "${DAYOFWEEK}" -eq 4 ]
then    
  wget --timeout=15 http://adrianbowyer.com/workshop-profile-thursday.dat -O profile.dat
elif [ "${DAYOFWEEK}" -eq 5 ]
then    
  wget --timeout=15 http://adrianbowyer.com/workshop-profile-friday.dat -O profile.dat
elif [ "${DAYOFWEEK}" -eq 6 ]
then    
  wget --timeout=15 http://adrianbowyer.com/workshop-profile-saturday.dat -O profile.dat
elif [ "${DAYOFWEEK}" -eq 7 ]
then    
  wget --timeout=15 http://adrianbowyer.com/workshop-profile-sunday.dat -O profile.dat
else
  echo "Can't find the day of the week!"
fi
./Host-software/Debug/Heating -p /dev/ttyUSB0 -i profile.dat -o workshop-temperatures.dat > Status
/usr/local/bin/wput --tries=2 workshop-temperatures.dat ftp://adrianbo:********@ftp.adrianbowyer.com:21/public_html/workshop-temperatures.dat
if [ -f Log ]
then
 cat Status >> Log
fi
