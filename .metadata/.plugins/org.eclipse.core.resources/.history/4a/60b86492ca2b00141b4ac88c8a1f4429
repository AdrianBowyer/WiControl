Switch::Switch(int p, Switch* n)
{
	pin = p;
	next = n;
}

bool Switch::Spin(unsigned long time)
{
	if(onWaiting)
	{
		if(time >= onTime)
		{
			onWaiting = false;
			digitalWrite(pin, HIGH);
		}
	}

	if(offWaiting)
	{

	}

	if(next)
		next->Spin();
}




