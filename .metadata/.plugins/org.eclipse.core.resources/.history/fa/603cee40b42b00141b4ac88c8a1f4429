#ifndef SWITCH_H_
#define SWITCH_H_

class Switch
{
public:
	Switch(int p, Switch* n);
	void On(float delay);
	void Off(float delay);
	bool Spin();

private:
	Switch* next;
	int pin;
	bool waiting;
	long time;
};


#endif /* SWITCH_H_ */
