#ifndef LIGHT_H_
#define LIGHT_H_

class Light
{
public:
	Light();
	void Spin(unsigned long time);
	void Set(float r, float g, float b, float t);
	float Red();
	float Green();
	float Blue();

private:
	int red;
	int green;
	int blue;
	int totalSteps;
	bool plusRed;
	bool plusGreen;
	bool plusBlue;
};

inline float Light::Red()
{
	return (float)red/255.0;
}
inline float Light::Green()
{
	return (float)green/255.0;
}
inline float Light::Blue()
{
	return (float)blue/255.0;
}

#endif /* LIGHT_H_ */
