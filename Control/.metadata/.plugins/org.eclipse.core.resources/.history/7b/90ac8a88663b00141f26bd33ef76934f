#ifndef LIGHT_H_
#define LIGHT_H_

class Light
{
public:
	Light();
	void Spin(unsigned long time);
	void Set(float r, float g, float b, float t);
	float Red();
	float Green();
	float Blue();

private:
	int r;
	int g;
	int b;
};

inline float Light::Red()
{
	return (float)r/255.0;
}
inline float Light::Green()
{
	return (float)g/255.0;
}
inline float Light::Blue()
{
	return (float)b/255.0;
}

#endif /* LIGHT_H_ */
