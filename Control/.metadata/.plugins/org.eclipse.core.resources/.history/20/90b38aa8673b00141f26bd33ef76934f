#include "Control.h"

Light::Light()
{


}

void Light::Spin(unsigned long time)
{

}

void Light::Set(float r, float g, float b, float t)
{
	red = (int)(r*255.0);
	green = (int)(g*255.0);
	blue = (int)(b*255.0);
	switches[RED]->On(r, t);
	switches[GREEN]->On(g, t);
	switches[BLUE]->On(b, t);
}

